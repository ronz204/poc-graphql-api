FROM oven/bun:1.3.5-alpine AS base
WORKDIR /usr/src/app

COPY package.json bun.lock ./

FROM base AS development
COPY . .

RUN bun install --frozen-lockfile

USER bun
EXPOSE 3000
CMD ["bun", "run", "start"]

FROM base AS building
COPY . .

RUN bun install --frozen-lockfile --production && \
  bun run build

FROM oven/bun:1.3.5-alpine AS production
WORKDIR /usr/src/app

RUN addgroup -S graphgroup && adduser -S graphuser -G graphgroup
COPY --from=building --chown=graphuser:graphgroup /usr/src/app/graph .

USER graphuser
EXPOSE 3000
ENTRYPOINT [ "./graph" ]
